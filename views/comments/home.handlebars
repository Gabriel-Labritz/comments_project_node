<div class="home-header">
    {{#if search}}
        <h1>Você está buscando por: <span>{{search}}</span></h1>
        {{#if commentsQty}}
            <p>Resultados encontrados: <span>{{commentsQty}}</span></p>
        {{else}}
            <p>Nenhum resultado foi encontrado para busca: <span>{{search}}</span></p>
        {{/if}}
    {{else}}
        <h1>Todos os <span>comentários</span></h1>
    {{/if}}
    
    <form action="/" method="get">
        <input type="text" name="search" placeholder="Está procurando por algo?">
        <input type="submit" value="Buscar" class="btn">
    </form>

    <div class="order-container">
        <span>Ordernar por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="comments-container">
    {{#each comments}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>por <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>


